extends layout

block content
  .col-md-6.offset-md-3
    .card
      .card-body
        h1.card-title Register
        .card-subtitle.mb-3 Please register using the form bellow
        .errors.notification-wrapper
          if errors
            each error, i in errors
              .alert.alert-danger.alert-dismissible.fade.show(role='alert')
                button.close(type='button', data-dismiss='alert', aria-label='Close')
                  span(aria-hidden='true') &times;
                span #{error.msg}
        form(method='post', action='/users/register', enctype='multipart/form-data')
          .form-group
            label Name
            input.form-control(type='text', name='name', placeholder='Enter Name')
          .form-group
            label Email
            input.form-control(type='email', name='email', placeholder='Enter Email')
          .form-group
            label Password
            input.form-control(type='password', name='password', placeholder='Enter password')
          .form-group
            label Confirm Password
            input.form-control(type='password', name='password2', placeholder='Confirm password')
          //- .form-group
          //- 	label Profile image
          //- 	input.form-control(type='file', name='upl')
          .text-center
            input.btn.btn-primary.btn-lg(name='submit', type='submit', value='Register')
