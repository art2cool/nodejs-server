doctype html
html
	head
		title #{title}: NodeAuth
	link(href='/stylesheets/bootstrap.css', rel='stylesheet')
	link(href='/stylesheets/style.css', rel='stylesheet')
	link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css')
	body
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') NodeAuth
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						if user
							li(class=(title === 'Members' ? 'active' : ''))
								a(href='/') Members
							li(class=(title === 'Students' ? 'active' : ''))
								a(href='/students') Students
							li(class=(title === 'Classes' ? 'active' : ''))
								a(href='/classes') Classes
						if !user
							li(class=(title === 'Register' ? 'active' : ''))
								a(href='/users/register') Register
							li(class=(title === 'Login' ? 'active' : ''))
								a(href='/users/login') Login
					ul.nav.navbar-nav.navbar-right
						if user
							li
								a(href='/users/logout') Logout
		.container
			!= messages()
			block content
		footer
			p &copy 2015, You vexed shy mirth now noise.

		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js')
		script(src='/javascripts/bootstrap.js')