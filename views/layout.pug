doctype html
html
  head
    title #{title}: NodeAuth
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(href='/css/application.css', rel='stylesheet')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css')
  body
    #root
      header.header
        nav.navbar.navbar-custom
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') NodeAuth
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              if user
                li(class=(title === 'Members' ? 'active' : ''))
                  a(href='/') Members
                li(class=(title === 'Students' ? 'active' : ''))
                  a(href='/students') Students
                if user.role === 'admin' || user.role === 'manager	'
                  li(class=(title === 'Teachers' ? 'active' : ''))
                    a(href='/teachers') Teachers
                li(class=(title === 'Classes' ? 'active' : ''))
                  a(href='/classes') Classes
              if !user
                li(class=(title === 'Register' ? 'active' : ''))
                  a(href='/users/register') Register
                li(class=(title === 'Login' ? 'active' : ''))
                  a(href='/users/login') Login
            ul.nav.navbar-nav.navbar-right
              if user
                li
                  a(href='/users/logout') Logout
      main.main
        .container
          != messages()
          block content
      footer.footer
        12321

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/accounts.js')