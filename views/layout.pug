doctype html
html
  head
    title Linguist | #{title}
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(href='/css/application.css', rel='stylesheet')
  body
    #root
      header.header
        nav.navbar.navbar-expand-sm.navbar-custom
          
          a.navbar-brand(href='/') Linguist
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          .collapse.navbar-collapse.ml-auto
            ul.navbar-nav.ml-auto
              if user
                li(class=(title === 'Calendar' ? 'active' : ''))
                  a.nav-link(href='/') Calendar
                li(class=(title === 'Students' ? 'active' : ''))
                  a.nav-link(href='/students') Students
                if user.role === 'admin' || user.role === 'manager	'
                  li(class=(title === 'Teachers' ? 'active' : ''))
                    a.nav-link(href='/teachers') Teachers
                li(class=(title === 'Classes' ? 'active' : ''))
                  a.nav-link(href='/classes') Classes
              if !user
                li(class=(title === 'Register' ? 'active' : ''))
                  a.nav-link(href='/users/register') Register
                li(class=(title === 'Login' ? 'active' : ''))
                  a.nav-link(href='/users/login') Login
            ul.nav.navbar-nav.navbar-right
              if user
                li
                  a.nav-link(href='/users/logout') Logout
      main.main
        .container
          != messages()
          block content
      footer.footer
        .text-center.copyright
          span Copyright &copy; #{new Date().getFullYear()} Linguist
          br
          span Developed by Rolique
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.js')
    script(src='/js/app.js')
