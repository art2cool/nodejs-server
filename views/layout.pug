doctype html
html
  head
    title #{title}: NodeAuth
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(href='/css/application.css', rel='stylesheet')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css')
  body
    #root
      header.header
        nav.navbar.navbar-expand-sm.navbar-custom
          
          a.navbar-brand(href='/') Linguist
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          .collapse.navbar-collapse.ml-auto
            ul.navbar-nav.ml-auto
              if user
                li(class=(title === 'Calendar' ? 'active' : ''))
                  a(href='/') Calendar
                li(class=(title === 'Students' ? 'active' : ''))
                  a.nav-link(href='/students') Students
                if user.role === 'admin' || user.role === 'manager	'
                  li(class=(title === 'Teachers' ? 'active' : ''))
                    a.nav-link(href='/teachers') Teachers
                li(class=(title === 'Classes' ? 'active' : ''))
                  a.nav-link(href='/classes') Classes
              if !user
                li(class=(title === 'Register' ? 'active' : ''))
                  a.nav-link(href='/users/register') Register
                li(class=(title === 'Login' ? 'active' : ''))
                  a.nav-link(href='/users/login') Login
            ul.nav.navbar-nav.navbar-right
              if user
                li
                  a.nav-link(href='/users/logout') Logout
      main.main
        .container
          != messages()
          block content
      footer.footer
        .text-center
          span Copyright &copy; #{new Date().getFullYear()} Linguist
          br
          span Developed by Rolique

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/accounts.js')
    script(src='/js/application.js')
