extends layout

block content
  .col-md-6.offset-md-3
    .card
      .card-header
        h1.card-title Login
        .card-subtitle Please login below
      .card-body
        form(method='post', action='/users/login')
          .form-group
            label Email
            input.form-control(type='email', name='email', placeholder='Enter Email')
          .form-group
            label Password
            input.form-control(type='password', name='password', placeholder='Enter password')
          .text-center
            input.btn.btn-primary.btn-lg(name='submit', type='submit', value='Login')
