extends layout

block content
	h1 Create teachers
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	.row
		.col-offset-lg-4.col-offset-md-5.col-offset-sm-6.col-lg-4.col-md-5.col-sm-6
			form(method='post', action='/teachers', enctype='application/json')
				.form-group
					label Name
					input.form-control(type='text', name='name', placeholder='Enter teacher Name')
				.form-group
					label Email
					input.form-control(type='email', name='email', placeholder='Enter contact Email')
				.form-group
					label Phone
					input.form-control(type='text', name='phone', placeholder='Enter contact phone')
				.form-group
					label Password
					input.form-control(type='password', name='password', placeholder='Enter password')
				.form-group
					label Coeficient
					input.form-control(type='number', name='coeficient',)
				input.btn.btn-primary.pull-right(name='submit', type='submit', value='Add Teacher')
				a.btn.btn-default.pull-right(href='/teachers', role='button') Cancel