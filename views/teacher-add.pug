extends layout

block content
  .col-md-12
    .card
      .card-header
        h1.card-title #{title}

      .card-controls
        a.btn.btn-info.btn-sm.icon-left-big.mr-3(href=`/teachers`)

      .card-body
        .table-responsive
          form(method='post', action='/teachers', enctype='application/json')
            .form-group
              label Name
              input.form-control(type='text', name='name', placeholder='Enter teacher Name')
            .form-group
              label Email
              input.form-control(type='email', name='email', placeholder='Enter contact Email')
            .form-group
              label Phone
              input.form-control(type='text', name='phone', placeholder='Enter contact phone')
            .form-group
              label Password
              input.form-control(type='password', name='password', placeholder='Enter password')
            .form-group
              label Coeficient
              input.form-control(type='number', name='coeficient',)
            input.btn.btn-info(name='submit', type='submit', value='Add Teacher')
            a.btn.btn-default(href='/teachers', role='button') Cancel

  ul.errors
    if errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}