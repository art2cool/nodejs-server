extends layout

block content
  .col-xs-12
    .card
      .card-header
        h1.card-title #{title}
      
      .card-controls
        a.btn.btn-info.btn-sm.icon-left-big.mr-3(href=`/classes/`)
      
      .card-body
        form(method='post', action=`/collaborations/${collaboration._id}?clas=${collaboration.class}`, enctype='application/json')
          .form-group
            label day
            br
            input(name='date', type='date', value=`${collaboration.since.toISOString().split('T')[0]}`)
          .form-group
            label since
            br
            input(name='since', type='time', value=`${collaboration.since.toTimeString().substr(0, 5)}`)
          .form-group
            label until
            br
            input(name='until', type='time', value=`${collaboration.until.toTimeString().substr(0, 5)}`)
          .form-group
            label Room
            br
            input(name='room', type='text', value=`${collaboration.room}`)
          input.btn.btn-info(type='submit', value='Save')
          a.btn.btn-default(href=`/classes/${collaboration.class}`, role='button') Cancel

  ul.errors
    if errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}
