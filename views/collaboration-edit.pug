extends layout

block content
	h1 Edit Lessons
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	.row
		.col-offset-lg-4.col-offset-md-5.col-offset-sm-6.col-lg-4.col-md-5.col-sm-6
			form(method='post', action=`/collaborations/${collaboration._id}?clas=${collaboration.class}`, enctype='application/json')
				.form-group
					label day
					br
					input(name='date', type='date', value=`${collaboration.since.toISOString().split('T')[0]}`)
				.form-group
					label since
					br
					input(name='since', type='time', value=`${collaboration.since.toTimeString().substr(0, 5)}`)
				.form-group
					label until
					br
					input(name='until', type='time', value=`${collaboration.until.toTimeString().substr(0, 5)}`)
				.form-group
					label Room
					br
					input(name='room', type='text', value=`${collaboration.room}`)
				input.btn.btn-primary.pull-right(type='submit', value='Save')
				a.btn.btn-default.pull-right(href=`/classes/${collaboration.class}`, role='button') Cancel