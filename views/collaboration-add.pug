extends layout

block content
  .col-xs-12
    .card
      .card-header
        h1.card-title #{title}
      
      .card-controls
        a.btn.btn-info.btn-sm.icon-left-big.mr-3(href='/classes/' + clas)
      
      .card-body
        form(method='post', action=`/collaborations?class=${clas}`, enctype='application/json')
          .form-group
            label Day
            input.form-control(name='date', type='date', value=`${new Date().toISOString().split('T')[0]}`)
          .form-group
            label Since
            input.form-control(name='since', type='time', value=`${new Date().toTimeString().substr(0, 5)}`)
          .form-group
            label Until
            input.form-control(name='until', type='time', value=`${new Date().toTimeString().substr(0, 5)}`)
          .form-group
            label Room
            input.form-control(name='room', type='text')
          input.btn.btn-info(name='submit', type='submit', value='Create lessons')
          a.btn.btn-default(href=`/classes/${clas}`, role='button') Cancel
  
  ul.errors
    if errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}
