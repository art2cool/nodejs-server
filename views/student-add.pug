extends layout

block content
	h1 Create student
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	.row
		.col-offset-lg-4.col-offset-md-5.col-offset-sm-6.col-lg-4.col-md-5.col-sm-6
			form(method='post', action='/students', enctype='application/json')
				.form-group
					label Name
					input.form-control(type='text', name='name', placeholder='Enter Student Name')
				.form-group
					label Email
					input.form-control(type='email', name='email', placeholder='Enter contact Email')
				.form-group
					label Phone
					input.form-control(type='text', name='phone', placeholder='Enter contact phone')
				.form-group
					label Language
					br
					select.selectpicker(name='language')
						option English
						option German
						option Polish
				.form-group
					label Language level
					br
					select.selectpicker(name='level')
						option A1
						option B1
						option C1
				.form-group
					label Day of birth
					input.form-control(type='date', name='dayofbirth',)
				.form-group
					label Account (in UAH)
					.input-group
						.input-group-addon â‚´
						input#account.form-control(type='number', name='account', placeholder='Amount')
						.input-group-addon .00
				.form-group
					label(for='exampleFormControlTextarea1') Short Notes
					textarea#exampleFormControlTextarea1.form-control(rows='4', name='notes')
				input.btn.btn-primary.pull-right(name='submit', type='submit', value='Add Student')
				a.btn.btn-default.pull-right(href='/students', role='button') Cancel