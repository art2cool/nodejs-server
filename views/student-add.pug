extends layout

block content
  .col-xs-12
    .card
      .card-header
        h1.card-title #{title}

      .card-controls
        a.btn.btn-info.btn-sm.icon-left-big(href=`/students`)
      
      .card-body
        .errors.notification-wrapper
          if errors
            each error, i in errors
              .alert.alert-danger.alert-dismissible.fade.show(role='alert')
                button.close(type='button', data-dismiss='alert', aria-label='Close')
                  span(aria-hidden='true') &times;
                span #{error.msg}
        .row
          .col-xs-12.col-md-6.offset-md-3
            form(method='post', action='/students', enctype='application/json')
              .form-group
                label Name
                input.form-control(type='text', name='name', placeholder='Enter Student Name')
              .form-group
                label Email
                input.form-control(type='email', name='email', placeholder='Enter contact Email')
              .form-group
                label Phone
                input.form-control(type='text', name='phone', placeholder='Enter contact phone')
              .form-group
                label Language
                br
                select.selectpicker(name='language')
                  option English
                  option German
                  option Polish
              .form-group
                label Language level
                br
                // - @TODO check this selectpicker
                select.selectpicker(name='level')
                  option A1
                  option B1
                  option C1
              .form-group
                label Day of birth
                input.form-control(type='date', name='dayOfBirth',)
              .form-group
                label Account (in UAH)
                .input-group.align-items-center
                  .input-group-addon.mr-3 â‚´
                  input#account.form-control(type='number', name='account', placeholder='Amount')
                  .input-group-addon.ml-3 .00
              .form-group
                label(for='exampleFormControlTextarea1') Short Notes
                textarea#exampleFormControlTextarea1.form-control(rows='4', name='notes')
              input.btn.btn-primary(name='submit', type='submit', value=title)
              a.btn.btn-light.ml-3(href='/students', role='button') Cancel